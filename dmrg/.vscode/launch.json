    "version": "0.2.0",
    "configurations": [

        {
            "name": "dmrg_meas",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/applications/measure/dmrg_meas",
            "args": [ "dmrg-input" ],
            "stopAtEntry": false,
            "cwd": "/tmp/dmrgscf",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "dmrg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/applications/dmrg/dmrg",
            "args": [ "dmrg-input" ],
            "stopAtEntry": false,
            "cwd": "/tmp/dmrgscf",
            "environment":[{"name":"OMP_NUM_THREADS", "value":"1"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}