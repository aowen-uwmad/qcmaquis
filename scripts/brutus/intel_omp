#!/bin/bash -l
STATE="void"
STATE_AMBIENT=""
STATE_DMRG="configure"

COMPILER=intel
COMPILER_VERSION=13.1
MPI_WRAPPER=open_mpi
MPI_WRAPPER_VERSION=1.4
ALPS_DIR=$HOME/opt/alps-intel

export ALPS_ROOT=${ALPS_DIR}
export PATH=${ALPS_DIR}/bin:${PATH}
export PYTHONPATH=${ALPS_DIR}/lib:${PYTHONPATH}

module purge
module load goto2 python
module load gcc/4.7.2
module load ${COMPILER}/${COMPILER_VERSION}
module load ${MPI_WRAPPER}/${MPI_WRAPPER_VERSION}
module load hdf5
module load cmake

## common ##
# COMMON_CMAKE_CXX_FLAGS="-Wfatal-errors -openmp -w -O3 -DAMBIENT_OMP -DNDEBUG -std=c++11 -L/apps/castor/plasma-2.4.6/lib"
# COMMON_CMAKE_CXX_FLAGS_RELEASE="-Wfatal-errors -openmp -w -O3 -DAMBIENT_OMP -DNDEBUG -std=c++11 -L/apps/castor/plasma-2.4.6/lib"
## dmrg ##
DMRG_DEFAULT_BLAS_LAPACK=manual
DMRG_BLAS_LAPACK_MANUAL_LIBS="-mkl"
DMRG_ENABLE_OMP=ON
DMRG_BUILD_MULTIGRID=ON
DMRG_REGRESSION_PERFORMANCE_TESTS=ON

source $ROOT_DIR/scripts/common/common.sh 

execute $*
